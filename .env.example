# TCG Tactique - Development Environment Variables
# Copy this file to .env and update the values

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV=development
APP_NAME="TCG Tactique"
APP_VERSION=1.0.0

# ================================
# SERVER CONFIGURATION
# ================================
PORT=5001
HOST=0.0.0.0

# ================================
# DATABASE CONFIGURATION
# ================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tcg_tactique
DB_USER=tcg_user
DB_PASSWORD=tcg_password
DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public"

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ================================
# AUTHENTICATION & SECURITY
# ================================
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=24h
SESSION_SECRET=your_super_secret_session_key_change_in_production
SESSION_MAX_AGE=86400000

# ================================
# CORS CONFIGURATION
# ================================
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ================================
# OPENAI CONFIGURATION
# ================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5

# ================================
# LOGGING
# ================================
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_ERROR_FILE=logs/error.log

# ================================
# DEVELOPMENT SETTINGS
# ================================
AUTO_SEED=false
DEBUG_MODE=true
HOT_RELOAD=true

# ================================
# FRONTEND CONFIGURATION
# ================================
VITE_API_URL=http://localhost:5001
VITE_WS_URL=ws://localhost:5001
VITE_APP_NAME="TCG Tactique"
VITE_DEBUG=true

# ================================
# DOCKER SETTINGS
# ================================
COMPOSE_PROJECT_NAME=tcg-tactique-dev
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# ================================
# HEALTH CHECK SETTINGS
# ================================
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_INTERVAL=30000

# ================================
# GAME CONFIGURATION
# ================================
MAX_GAMES_PER_USER=3
GAME_TIMEOUT=1800000
CARD_GENERATION_SCHEDULE="0 0 1 * *"
CARD_POOL_SIZE=360