# Server Configuration
NODE_ENV=development
PORT=5001
HOST=0.0.0.0

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=tcg_tactique
DB_USER=tcg_user
DB_PASSWORD=tcg_password
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# Authentication
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d
SESSION_SECRET=your_super_secret_session_key_change_in_production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# AI Card Generation
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
CARD_GENERATION_ENABLED=true
MONTHLY_ROTATION_ENABLED=false

# Email Configuration (for future use)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
FROM_EMAIL=noreply@tcgtactique.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=logs/app.log

# Security
BCRYPT_ROUNDS=12
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Development
SEED_DATABASE=true
ENABLE_SWAGGER=true
DEBUG_MODE=true

# Production overrides (set these in production)
# NODE_ENV=production
# LOG_LEVEL=warn
# DEBUG_MODE=false
# SEED_DATABASE=false
# ENABLE_SWAGGER=false