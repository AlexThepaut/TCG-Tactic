# Environment
NODE_ENV=development

# API Configuration
VITE_API_URL=http://localhost:5001
VITE_WS_URL=ws://localhost:5001

# Application Configuration
VITE_APP_NAME=TCG Tactique
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Tactical card game with real-time multiplayer

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_SOUND=true
VITE_ENABLE_ANIMATIONS=true

# Game Configuration
VITE_GAME_TIMER_SECONDS=300
VITE_MAX_HAND_SIZE=10
VITE_STARTING_RESOURCES=3
VITE_MAX_RESOURCES=10

# UI Configuration
VITE_THEME=default
VITE_LANGUAGE=en
VITE_ENABLE_DARK_MODE=true

# Development
VITE_DEBUG_MODE=true
VITE_SHOW_GRID_LINES=false
VITE_ENABLE_HOTKEYS=true

# Analytics (for future use)
VITE_GOOGLE_ANALYTICS_ID=
VITE_MIXPANEL_TOKEN=

# Production overrides (set these in production)
# NODE_ENV=production
# VITE_DEBUG_MODE=false
# VITE_ENABLE_DEV_TOOLS=false
# VITE_ENABLE_ANALYTICS=true