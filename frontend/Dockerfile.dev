# Development Dockerfile for TCG Tactique Frontend
FROM node:18-alpine AS development

# Install system dependencies
RUN apk add --no-cache \
    curl \
    dumb-init

# Set working directory
WORKDIR /app

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001

# Copy package files
COPY package*.json ./

# Install dependencies (including dev dependencies)
RUN npm install && npm cache clean --force

# Copy source code
COPY . .

# Change ownership of the app directory
RUN chown -R nodejs:nodejs /app

# Switch to non-root user
USER nodejs

# Expose ports (3000 for dev server, 24678 for HMR)
EXPOSE 3000 24678

# Create entrypoint script
COPY --chown=nodejs:nodejs <<'EOF' /app/entrypoint.dev.sh
#!/bin/sh
set -e

echo "ðŸŽ¨ Starting TCG Tactique Frontend (Development)"

# Wait for backend to be ready
echo "â³ Waiting for backend..."
until curl -f http://backend:5001/health 2>/dev/null; do
  echo "Backend is unavailable - sleeping"
  sleep 5
done
echo "âœ… Backend is ready!"

# Install any new dependencies (in case package.json changed)
echo "ðŸ“¦ Checking for dependency updates..."
npm install

# Start Vite development server
echo "ðŸŽ¯ Starting Vite development server..."
exec npm run dev -- --host 0.0.0.0 --port 3000
EOF

RUN chmod +x /app/entrypoint.dev.sh

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD curl -f http://localhost:3000 || exit 1

# Use dumb-init to handle signals properly
ENTRYPOINT ["dumb-init", "--"]
CMD ["/app/entrypoint.dev.sh"]